<section class="showcase-cnt">
    <div class="overlay-3 alt"></div>
    <div class="center-text">
        <h1>Contact Us</h1>
        <div class="navigator">
            <a href="/">HOME</a>
            <div id="divider"></div>
            <a id="cur" href="/contact">Contact</a>
        </div>
    </div>
</section>
<section class="showcase-cnt-2">
    <div class="info">
        <div class="info-bar">
            <i class="far fa-address-book"></i>
            <h1>Address:</h1>
            <p>54, Adeniyi Jones,<br> Ikeja Lagos.</p>
        </div>
        <div class="info-bar" id="info-border">
            <i class="fas fa-mobile-alt"></i>
            <h1>Phone:</h1>
            <h2>08068463954<br> 07033259358</h2>
        </div>
        <div class="info-bar">
            <i class="far fa-envelope"></i>
            <h1>Email:</h1>
            <h2>blah@email.com</h2>
        </div>
    </div>
</section>
<section class="showcase-cnt-3">
    <h1>Get In Touch</h1>
    <form method="POST" action="/send" class="form">
        <p>
            <%= msg %>
        </p>
        <div class="form-group">
            <input name="name" type="text" class="form-box" placeholder="Your Name">
        </div>
        <div class="form-group">
            <input name="email" type="text" class="form-box" placeholder="Your Email">
        </div>
        <div class="form-group">
            <input name="subject" type="text" class="form-box" placeholder="Subject">
        </div>
        <div class="form-group">
            <input name="phone" type="text" class="form-box" placeholder="Phone No.">
        </div>
        <div class="form-group">
            <textarea name="message" id="message" rows="7" placeholder="Message"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Send Message" class="submit">
        </div>
    </form>
</section>
<section>
    <div id="map"></div>
</section>